<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svbc"
    tools:context=".MemoryActivity">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#FDFFFF">

            <TableLayout
                android:stretchColumns="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:background="#03A9F4"
                        android:text="RAM"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/shadow_color"
                        android:layout_span="2"
                        tools:ignore="RtlCompat">

                    </TextView>
                </TableRow>

                <TableRow>

                <RelativeLayout
                    android:layout_span="3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/pbRam"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:progressDrawable="@drawable/progressbar_states"
                        android:foregroundGravity="center_horizontal"></ProgressBar>

                    <TextView
                        android:id="@+id/tv_perc_ram"
                        android:textSize="25sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Free"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/freeRam"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Used"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/usedRam"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/TotalRam"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>




            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#FDFFFF">

            <TableLayout
                android:stretchColumns="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:background="#FF5722"
                        android:text="ROM"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/shadow_color"
                        android:layout_span="2"
                        tools:ignore="RtlCompat">

                    </TextView>
                </TableRow>

                <TableRow>

                    <RelativeLayout
                        android:layout_span="3"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/pbRom"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:progressDrawable="@drawable/progressbar_states"
                            android:foregroundGravity="center_horizontal"></ProgressBar>

                        <TextView
                            android:id="@+id/tv_perc_rom"
                            android:textSize="25sp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/shadow_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Free"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/freeRom"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Used"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/usedRom"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/TotalRom"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>


            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#FDFFFF">

            <TableLayout
                android:stretchColumns="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:background="#4CAF50"
                        android:text="JAVA HEAP"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/shadow_color"
                        android:layout_span="2"
                        tools:ignore="RtlCompat">

                    </TextView>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Total"
                        android:textSize="25sp"
                        android:textColor="@color/shadow_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/totalHeap"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</ScrollView>